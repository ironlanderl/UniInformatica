{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe compila il file attivo",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                //"-lmingw32",                
                //"-lSDL2main",
                //"-lSDL2",
                "-lm",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}